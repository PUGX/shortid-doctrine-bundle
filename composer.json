{
    "name": "pugx/shortid-doctrine-bundle",
    "type": "symfony-bundle",
    "description": "Symfony bundle for ShortId Doctrine type",
    "keywords": [
        "symfony",
        "bundle",
        "shortid",
        "doctrine"
    ],
    "homepage": "http://pugx.org/",
    "license": "MIT",
    "authors": [
        {
            "name": "Massimiliano Arione",
            "email": "garakkio@gmail.com"
        },
        {
            "name": "The Community",
            "homepage": "https://github.com/pugx/shortid-doctrine-bundle"
        }
    ],
    "require": {
        "php": "^8.0",
        "pugx/shortid-doctrine": "^1.0",
        "symfony/config": "^5.4 || ^6.0 || ^7.0",
        "symfony/dependency-injection": "^5.4 || ^6.0 || ^7.0",
        "symfony/http-kernel": "^5.4 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "PUGX\\Shortid\\Doctrine\\Bundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PUGX\\Shortid\\Doctrine\\Bundle\\Tests\\": "tests"
        }
    },
    "support": {
        "issues": "https://github.com/pugx/shortid-doctrine-bundle/issues"
    }
}
